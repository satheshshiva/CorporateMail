<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- The main theme for the app.
    Parent: Theme.AppCompat.Light.NoActionBar -->

    <style name="ParentTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/blue_material_sample_Primary</item>
        <item name="colorPrimaryDark">@color/blue_material_sample_Primary_Dark</item>
        <item name="android:textColor">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorAccent">@color/accent_material_dark</item>
        <item name="android:actionModeBackground">@color/blue_material_sample_Primary</item>
        <item name="actionModeStyle">@style/Styled.ActionMode</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Following theme for Settings activity-->
    <style name="ParentTheme.DarkActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- The following 2 settings will be different than the NoActionBar theme -->
        <item name="windowActionBar">true</item>
        <item name="windowActionModeOverlay">false</item>
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/blue_material_sample_Primary</item>
        <item name="colorPrimaryDark">@color/blue_material_sample_Primary_Dark</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/accent_material_dark</item>
        <item name="android:actionModeBackground">@color/blue_material_sample_Primary</item>
        <item name="actionModeStyle">@style/Styled.ActionMode</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!-- CAB Color-->
    <style name="Styled.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/blue_material_sample_Primary</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

</resources>