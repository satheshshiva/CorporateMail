<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/titleBar_Warning_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="18dp"
    android:layout_alignParentTop="true"
    android:background="@color/StatusBarBlueColor"
    android:orientation="horizontal"
    android:elevation="10dp">

    <ImageView android:id="@+id/titlebar_warning_pic"
        android:src="@drawable/warning_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/titlebar_warning_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="Some warning"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />
</LinearLayout>